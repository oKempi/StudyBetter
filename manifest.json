{
  "manifest_version": 3,
  "name": "Study better",
  "version": "2.0",
  "description": "A simple Chrome extension to help you focus on things that need to be done!",
  "permissions": ["tabs", "activeTab", "notifications"],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["websites.txt"],
      "matches": ["<all_urls>"]
    }
  ]
}